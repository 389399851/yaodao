<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yd.j1902_gf.mapper.UserMapper">
    <resultMap id="userMap" type="com.yd.j1902_gf.pojo.User">
        <id property="id" column="ID"/>
        <result property="uname" column="UNAME"/>
        <result property="upw" column="UPW"/>
        <result property="email" column="EMAIL"/>
        <result property="type" column="TYPE"/>
        <result property="idcard" column="IDCARD"/>
        <result property="iphone" column="IPHONE"/>
        <result property="name" column="NAME"/>
        <result property="img" column="IMG"/>
        <result property="leixing" column="LEIXING"/>
    </resultMap>
    <sql id="sql">
        ID,
        UNAME,
        UPW,
        EMAIL,
        TYPE,
        IDCARD,
        IPHONE,
        NAME,
        IMG,
        LEIXING,
        SHIMING
    </sql>
    <select id="findAll" resultMap="userMap">
        SELECT
        <include refid="sql"/>
        FROM
        USER
    </select>
    <select id="findByUserName" parameterType="String" resultMap="userMap">
        SELECT
        <include refid="sql"/>
        FROM
        USER
        WHERE
        UNAME=#{uname}
    </select>
    <select id="getUserByName" resultMap="userMap" parameterType="String">
        SELECT
        <include refid="sql"/>
        FROM
        USER
        WHERE
        UNAME=#{uname}
    </select>
    <insert id="registerByUsernameAndPassword" parameterType="com.yd.j1902_gf.pojo.User">
        INSERT
        INTO
        USER
        (uname,upw,email,type,shiming)
        VALUES
        (#{uname},#{upw},#{email},#{type},shiming='未实名认证')
    </insert>
    <insert id="useradd" parameterType="com.yd.j1902_gf.pojo.User">
        INSERT
        INTO
        USER
        (uname,name,email)
        VALUES
        (#{uname},#{name},#{email})
    </insert>
    <select id="getUserById" parameterType="int" resultMap="userMap">
        SELECT
        <include refid="sql"/>
        FROM
        USER
        WHERE
        ID=#{id}
    </select>
    <update id="update" parameterType="com.yd.j1902_gf.pojo.User">
        UPDATE
        USER
        SET
        UNAME=#{uname},
        NAME=#{name},
        EMAIL=#{email}
        WHERE
        ID=#{id}
    </update>
    <delete id="deleteUser" parameterType="int">
        DELETE
        FROM
        USER
        WHERE
        ID=#{id}
    </delete>
    <select id="mohuchaxun" parameterType="String" resultMap="userMap">
        SELECT
        <include refid="sql"/>
        FROM
        USER
        WHERE
        UNAME LIKE "%"#{uname}"%"
        OR
        NAME LIKE "%"#{name}"%"
        OR
        EMAIL LIKE "%"#{email}"%"
    </select>
    <delete id="piliangshanchu" parameterType="int">
        DELETE
         FROM
        USER
        WHERE
        ID=#{id}
    </delete>
    <select id="getUserByIdcardAndIphone" parameterType="String" resultMap="userMap">
        SELECT
        <include refid="sql"/>
        FROM
        USER
        WHERE
        IDCARD=#{idcard}
        OR
        IPHONE=#{iphone}
    </select>
    <select id="yzSelect" resultMap="userMap">
        SELECT
        <include refid="sql"/>
        FROM
        USER
        WHERE
        NAME=#{name}
        OR
        IDCARD=#{idcard}
        OR
        IPHONE=#{iphone}
    </select>
    <select id="getUserByInUname" parameterType="String" resultMap="userMap">
        SELECT
        <include refid="sql"/>
        FROM
        USER
        WHERE
        UNAME=#{uname}
    </select>
    <update id="insertYanUpdate" parameterType="com.yd.j1902_gf.pojo.User">
        UPDATE
        USER
        SET
        IDCARD=#{idcard},
        IPHONE=#{iphone},
        NAME=#{name},
        IMG=#{img},
        LEIXING=#{leixing},
        SHIMING=#{shiming}
        WHERE
        UNAME=#{uname}
    </update>
    <select id="getUserByShiName" resultMap="userMap">
        SELECT
        <include refid="sql"/>
        FROM
        USER
        WHERE
        SHIMING='待审核'
    </select>
    <update id="shimingUpdate" parameterType="String">
        UPDATE
        USER
        SET
        SHIMING='已审核'
        WHERE
        UNAME=#{uname}
    </update>
    <update id="delshiming" parameterType="String">
        UPDATE
        USER
        SET
        IDCARD='',
        IPHONE='',
        NAME='',
        IMG='',
        LEIXING='',
        SHIMING='',
        SHIMING=''
        WHERE
        UNAME=#{uname}
    </update>
    <select id="getUserShiMing" parameterType="String" resultMap="userMap">
        SELECT
        SHIMING
        FROM
        USER
        WHERE
        UNAME=#{uname}
    </select>
</mapper>